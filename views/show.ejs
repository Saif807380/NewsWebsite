<%- include('./partials/header'); %> 

<div class="container mt-5">
    <div class="row">
        <% articles.forEach(function(article){  %> 
            <div class="col-sm-6 col-lg-4 my-3">
                <div class="card h-100 w-100">
                    <img src="<%= article.image_url %> " alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text"><%= article.description %></p>
                    </div>
                    <div id="read-more" class="mb-3">
                        <a href="<%= article.article_url %>" class="btn btn-primary">Read More</a>
                    </div>
                    <p class="card-footer text-muted mb-0"><%= article.source %> </p>
                </div>
            </div>
        <% }) %> 
        
    </div>
</div>


<%- include('./partials/footer'); %> 