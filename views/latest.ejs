<%- include('./partials/header'); %> 

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-3 col-xl-2 d-none d-md-block">
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="lead list-group-item bg-dark text-white">Current Weather</li>
                    <li class="list-group-item">Temperature: <%= weather.main.temp %>Â°C</li>
                    <li class="list-group-item">Humidity: <%= weather.main.humidity %>%</li>
                    <li class="list-group-item">Pressure: <%= weather.main.pressure %> hPa</li>
                    <li class="list-group-item">Description: <%= weather.description %></li>
                </ul>
            </div>
        </div>
        <div class="col-md-8 col-xl-9">
            <div class="row">
                <div class="col-12 d-none d-md-block " >
                    <div class="card">
                        <div class="embed-responsive" id="embed-container">
                            <img alt="Card image cap" class="card-img-top embed-responsive-item img-fluid" 
                            src="https://thumbor.forbes.com/thumbor/960x0/https%3A%2F%2Fblogs-images.forbes.com%2Falejandrocremades%2Ffiles%2F2018%2F12%2Fbusiness-3605367_1920-1200x741.jpg" />
                         </div>
                        <div class="card-img-overlay">
                            <h4 class="text-light">
                                Hello
                            </h4>
                        </div>
                    </div>
                </div>
                <% articles.forEach(function(article){ %>
                    <div class="col-sm-6 col-md-4 col-xl-3 my-3 align-items-stretch">
                        <div class="card h-100">
                            <img src="<%= article.image_url %> " alt="" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title"><%= article.title %> </h5>
                                <p class="card-text"><%= article.description %></p>
                            </div>
                            <div id="read-more" class="mb-3">
                                <a href="<%= article.article_url %>" class="btn btn-primary">Read More</a>
                            </div>
                            <p class="card-footer text-muted mb-0"><%= article.source %> </p>
                        </div>
                    </div>
                <% }) %> 
            </div>
        </div>
    </div>
</div>


<%- include('./partials/footer'); %> 