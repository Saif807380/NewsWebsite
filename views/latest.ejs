<%- include('./partials/header'); %> 

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-3 col-xl-2 d-none d-md-block">
            <div class="card shadow">
                <ul class="list-group list-group-flush">
                    <li class="lead list-group-item  text-dark">Current Weather</li>
                    <li class="list-group-item"><i class="fa fa-thermometer-three-quarters text-dark"></i> Temperature: <%= weather.main.temp %>Â°C</li>
                    <li class="list-group-item"><span class="iconify" data-icon="wi-humidity" data-inline="false"></span> Humidity: <%= weather.main.humidity %>%</li>
                    <li class="list-group-item"><span class="iconify" data-icon="wi:barometer" data-inline="false"></span> Pressure: <%= weather.main.pressure %> hPa</li>
                    <li class="list-group-item">Description: <%= weather.description %></li>
                </ul>
            </div>
        </div>
        <div class="col-md-8 col-xl-9">
            <div class="row">
                <div class="col-12 d-none d-md-block " >
                    <div class="card shadow">
                        <div class="embed-responsive" id="embed-container">
                            <img alt="Card image cap" class="card-img-top embed-responsive-item img-fluid" 
                            src="<%= header.image_url %>" id="header-img"/>
                         </div>
                        <div class="card-img-overlay row align-items-end">
                            <div class="col-lg-10 col-xl-10">
                                <h4 class="text-light">
                                    <%= header.title %> 
                                </h4>
                                <p class="text-light">
                                    <%= header.description %> 
                                </p>
                            </div>
                            <div class="col-lg-2">
                                <a href="<%= header.article_url %> " class="btn btn-outline-light">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% articles.forEach(function(article){ %>
                    <div class="col-sm-6 col-md-4  my-3 align-items-stretch">
                        <div class="card h-100 shadow">
                            <img src="<%= article.image_url %> " alt="" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title"><%= article.title %> </h5>
                                <p class="card-text"><%= article.description %></p>
                            </div>
                            <div id="read-more" class="mb-3">
                                <a href="<%= article.article_url %>" class="btn btn-primary">Read More</a>
                            </div>
                            <div class="card-footer row justify-content-around mx-0 px-0 align-items-center">
                                <div class="col-6">
                                    <p class="text-muted mb-0"><%= article.source %></p>
                                </div>
                                <div class="col-3">
                                    <% if(!article.isFav) {%>
                                        <form class="form-inline" action="/add/<%= article._id %>" method="POST">
                                            <button class="btn btn-outline"><i class="fa fa-heart-o heart-icon"></i></button>
                                        </form>
                                    <% }else{ %>
                                        <form action="/delete/<%= article._id %>?_method=DELETE" method="POST">
                                            <button class="btn btn-outline"><i class="fa fa-heart heart-icon"></i></button>
                                        </form>
                                    <% } %> 
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %> 
            </div>
        </div>
    </div>
</div>


<%- include('./partials/footer'); %> 