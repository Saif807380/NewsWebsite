<%- include('./partials/header'); %> 

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-2">
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="lead list-group-item bg-dark text-white">Current Weather</li>
                    <li class="list-group-item">Temperature: <%= weather.temp %></li>
                    <li class="list-group-item">Humidity: <%= weather.humidity %></li>
                    <li class="list-group-item">Pressure: <%= weather.pressure %></li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-12" id="lead-container">
                    <div class="card" id="lead-card">
                        <div class="embed-responsive embed-responsive-16by9">
                            <img alt="Card image cap" class="card-img-top embed-responsive-item" 
                            src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" />
                         </div>
                        <div class="card-img-overlay">
                            <h4 class="text-light">
                                Hello
                            </h4>
                        </div>
                    </div>
                </div>
                <% articles.forEach(function(article){ %>
                    <div class="col-md-3 my-3 align-items-stretch">
                        <div class="card h-100">
                            <img src="<%= article.image_url %> " alt="" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title"><%= article.title %> </h5>
                                <p class="card-text"><%= article.description %></p>
                            </div>
                            <p class="card-footer text-muted mb-0"><%= article.source %> </p>
                        </div>
                    </div>
                <% }) %> 
            </div>
        </div>
    </div>
</div>


<%- include('./partials/footer'); %> 